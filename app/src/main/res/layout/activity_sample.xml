<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.telen.uiwidgets.SampleActivity">
        <Button
            android:id="@+id/trigger_horizontal_topSnackBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TopSnackBar horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"/>

        <Button
            android:id="@+id/trigger_vertical_topSnackBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TopSnackBar vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trigger_horizontal_topSnackBar"/>

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>